---
import BaseLayout from "../layouts/BaseLayout.astro";
import TerminalStatement from "../components/TerminalStatement.astro";
import { getCollection } from 'astro:content';
const terminalStatements = await getCollection('terminal');
---

<BaseLayout>
	<section id="presentation">
        <section id="introduction">
            <h1>Joel Lorenz Boada<span class="caret">&nbsp;</span></h1>
            <p>
                I am a Full-Stack Web Developer. My passion is building simple, beautiful user experiences. 
                <br>
                Check out my <a href="#projects">side-projects</a> below.
            </p>
        </section>

        <section id="terminal">
            <div class="terminal-header">
                <div class="header-button red"></div>
                <div class="header-button yellow"></div>
                <div class="header-button green"></div>
            </div>

            <div class="terminal-window">
                <TerminalStatement inputStatement="Joel.contactInfo" returnStatement={true}>
                    ["<a href="mailto:joel.lorenz2000@gmail.com">joel.lorenz2000@gmail.com</a>", "<a href="https://www.linkedin.com/in/joellorenzboada/" target="_blank">LinkedIn</a>", "<a href="https://github.com/JoelDoryoku" target="_blank">GitHub</a>"]
                </TerminalStatement>

                {terminalStatements.map((terminalStatement, i) => (
                    <TerminalStatement inputStatement={terminalStatement.data.input} returnStatement={true}>
                        {terminalStatement.data.return}
                    </TerminalStatement>
                ))}

                <TerminalStatement inputStatement="" />
            </div>
        </section>
    </section>
</BaseLayout>